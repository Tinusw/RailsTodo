<p id="notice"><%= notice %></p>
<div class="col-md-6 col-md-offset-3 main">
	<div class="list row well text-center">
	  <h3>
		  <%= @todo_list.title %>
	  </h3>
	  <h5>
		  <%= @todo_list.desc %>
	  </h5>
	</div>

	<div class="row well text-left">
		<%= render @todo_list.todo_items %>
		<div>
			<%= render "todo_items/form" %>
		</div>
	</div>
	<div class="new text-center">
	  <label><bold id="blackText"> Only show uncompleted tasks?</bold>
	    <br>
	      <h3 class="glyphicon glyphicon-ok btn btn-info" id="tick"></h3>
		    <input id="checkUncompletedTasks" type="checkbox" unchecked hidden>
    </label>
  </div>

	<%= link_to todo_lists_path do %>
	  <div class="new text-center btn btn-info back">
	    <bold id="blackText">Back</bold>
	  </div>
	<% end %>
</div>